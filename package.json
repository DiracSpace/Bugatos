{
    "name": "botty",
    "version": "1.0.0",
    "description": "Discord bot for playing music from audio chats",
    "types": "./**/*.d.ts",
    "main": "dist/main.js",
    "scripts": {
        "dev": "nodemon -r tsconfig-paths/register ./src/main.ts",
        "test": "jest",
        "compile-clean": "rimraf dist/",
        "compile-build": "tsc -b ./tsconfig.compile.json && tsc-alias",
        "compile": "npm run compile-clean && npm run compile-build",
        "start": "node ./dist/main.js",
        "format:fix": "prettier --write . && prettier --check .",
        "check-upgrades": "npx taze -r",
        "apply-upgrades": "npx taze -w",
        "up": "docker build -t bugatos . && docker run -d bugatos"
    },
    "author": "Roberto De Le√≥n",
    "license": "ISC",
    "devDependencies": {
        "@jest/globals": "^29.6.4",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.4",
        "@typescript-eslint/parser": "^6.6.0",
        "eslint": "^8.48.0",
        "jest": "^29.6.4",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "taze": "^0.11.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.7",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@discordjs/voice": "^0.16.0",
        "@tomasjs/core": "^1.7.0",
        "@tomasjs/cqrs": "^1.3.0",
        "@tomasjs/logging": "^1.4.2",
        "discord.js": "^14.13.0",
        "dotenv": "^16.3.1",
        "openai": "^4.6.0",
        "reflect-metadata": "^0.1.13"
    }
}
