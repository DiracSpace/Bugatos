{
    "name": "botty",
    "version": "1.0.0",
    "description": "Discord bot for playing music from audio chats",
    "main": "./dist/src/index.js",
    "scripts": {
        "dev": "tsnd --respawn ./src/index.ts",
        "build": "rimraf dist && tsc -p tsconfig-build.json",
        "prod": "tsc && node ./dist/src/index.js",
        "format:check": "prettier --check .",
        "format:fix": "prettier --write .",
        "lint": "eslint --fix --ext .ts,.html,.scss,.css .",
        "check-upgrades": "npx npm-check-updates --peer --format group --color",
        "apply-upgrades": "npx npm-check-updates -u",
        "prepare": "husky install"
    },
    "author": "Roberto De Le√≥n",
    "license": "ISC",
    "dependencies": {
        "@discordjs/voice": "^0.14.0",
        "discord.js": "^14.7.1",
        "dotenv": "^16.0.3"
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "prettier": "2.8.3",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tslint": "^5.20.1",
        "typescript": "^4.9.5",
        "husky": "^8.0.0"
    }
}
